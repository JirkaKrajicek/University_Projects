@model CarouselViewModel
@{
    ViewData["Title"] = "Carousel";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Carousel CRUD page.</p>
<br />
<a asp-action="Create">Create Carousel Item</a>
<br />
<br />

@{
    if (Model != null && Model.Carousels != null && Model.Carousels.Count > 0)
    {
        <table style="width:100%" class="table table-responsive table-striped table-bordered">
            <tr>
                <th class="col-sm-1">@Html.DisplayNameFor(mod => mod.Carousels[0].ID)</th>
                <th class="col-sm-1">@Html.DisplayNameFor(mod => mod.Carousels[0].DataTarget)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Carousels[0].ImageAlt)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Carousels[0].ImageSrc)</th>
                <th class="col-sm-4">@Html.DisplayNameFor(mod => mod.Carousels[0].CarouselContent)</th>
                <th class="col-sm-1">Edit</th>
                <th class="col-sm-1">Delete</th>
            </tr>
            @foreach (var carouselItem in Model.Carousels)
            {

                <tr>
                    <td class="col-sm-1">@carouselItem.ID</td>
                    <td class="col-sm-1">@carouselItem.DataTarget</td>
                    <td class="col-sm-2">@carouselItem.ImageAlt</td>
                    <td class="col-sm-2">@carouselItem.ImageSrc</td>
                    <td class="col-sm-4">@carouselItem.CarouselContent</td>
                    <td class="col-sm-1"><a asp-action="Edit" asp-route-id="@carouselItem.ID">Edit</a></td>
                    <td class="col-sm-1"><a asp-action="Delete" asp-route-id="@carouselItem.ID" onclick="return ConfirmDelete();">Delete</a></td>

                </tr>
            }
        </table>
    }
}

@section Scripts
{
    <script src="~/js/Scripts.js"></script>
}
