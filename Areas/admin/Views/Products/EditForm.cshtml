@using  eshop.Areas.admin.Controllers
@model Product

@{ if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
        <div class="row">
            <form asp-action="@ViewBag.Action" enctype="multipart/form-data" method="post">
                <div class="col-md-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{ if (@ViewBag.Action == nameof(ProductsController.Edit))
                        {
                            <input type="hidden" asp-for="@Model.ID" class="form-control">
                        }
                    }

                    <div class="form-group">
                        <label asp-for="@Model.ProductName">Product Name</label>
                        <input asp-for="@Model.ProductName" class="form-control" placeholder="Enter ProductName">
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.ImageAlt">Image Alt</label>
                        <input asp-for="@Model.ImageAlt" class="form-control" placeholder="Enter ImageAlt">
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Image">Image Src</label>
                        <input id="fileupload" asp-for="@Model.Image" accept="image/*" class="form-inline">
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                        <input type="hidden" value="/" asp-for="@Model.ImageSrc" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price">Price</label>
                        <input asp-for="@Model.Price" class="form-control" placeholder="Enter Price">
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Description">Description</label>
                        <input asp-for="@Model.Description" class="form-control" placeholder="Enter Description">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    }
}
