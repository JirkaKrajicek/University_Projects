@using  eshop.Areas.Security.Controllers
@using  eshop.Models.Identity;
@model User

@{
    ViewData["Title"] = "User edit";
}
<br/>
<br />
<h2>Edit user</h2>
<br />


 <div class="row">
            <form asp-action="@ViewBag.Action" enctype="multipart/form-data" method="post">
                <div class="col-md-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="@Model.UserName">Data Target</label>
                        <input asp-for="@Model.UserName" class="form-control" placeholder="Enter DataTarget">
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Name">Image Alt</label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Enter ImageAlt">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.LastName">Image Alt</label>
                        <input asp-for="@Model.LastName" class="form-control" placeholder="Enter ImageAlt">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber">Carousel Content</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Enter CarouselContent">
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Email">Carousel Content</label>
                        <input asp-for="@Model.Email" class="form-control" placeholder="Enter CarouselContent">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    <br />
        <div>
            <a asp-action="Accounts">Back to List</a>
        </div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Validation/JavaScript.js"></script>
}
