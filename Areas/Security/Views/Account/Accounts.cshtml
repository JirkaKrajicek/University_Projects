@model AccountsViewModel
@{
    ViewData["Title"] = "Accounts";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Accounts overview</p>
<br />
<br />

@{
    if (Model != null && Model.Accounts != null && Model.Accounts.Count > 0)
    {
        <table style="width:100%" class="table table-responsive table-striped table-bordered">
            <tr>
                <th class="col-sm-1">@Html.DisplayNameFor(mod => mod.Accounts[0].Id)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].UserName)</th>                
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].Name)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].LastName)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].PasswordHash)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].PhoneNumber)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].Email)</th>
                <th class="col-sm-2">@Html.DisplayNameFor(mod => mod.Accounts[0].EmailConfirmed)</th>

            </tr>
            @foreach (var userItem in Model.Accounts)
            {

                <tr>
                    <td class="col-sm-1">@userItem.Id</td>
                    <td class="col-sm-2">@userItem.UserName</td>
                    <td class="col-sm-2">@userItem.Name</td>
                    <td class="col-sm-2">@userItem.LastName</td>
                    <td class="col-sm-2">@userItem.PasswordHash</td>
                    <td class="col-sm-2">@userItem.PhoneNumber</td>
                    <td class="col-sm-2">@userItem.Email</td>
                    <td class="col-sm-2">@userItem.EmailConfirmed</td>
                    <td class="col-sm-1"><a asp-action="Edit" asp-route-id="@userItem.Id">Edit</a></td>
                </tr>
            }
        </table>
    }
}

@section Scripts
{
    <script src="~/js/Scripts.js"></script>
}

